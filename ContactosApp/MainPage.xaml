<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactosApp.MainPage">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label Text="Contactos" FontAttributes="Bold" FontSize="24" />

        <!-- Search -->
        <Entry x:Name="searchEntry" Placeholder="Pesquisar por nome..." TextChanged="OnSearchTextChanged" />

        <!-- Add new contact fields -->
        <Frame CornerRadius="8" Padding="12" HasShadow="True">
            <VerticalStackLayout Spacing="8">
                <Entry x:Name="nomeEntry" Placeholder="Nome" />
                <Entry x:Name="telefoneEntry" Placeholder="Telefone" Keyboard="Telephone" />
                <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
                <Button Text="Adicionar Contacto" Clicked="OnAddContactClicked" HorizontalOptions="End" />
            </VerticalStackLayout>
        </Frame>

        <!-- Contacts list -->
        <CollectionView x:Name="contactsCollection"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="8" Padding="10" HasShadow="True" BackgroundColor="LightGray">
                        <!-- Use Grid so button can be placed at the extreme right -->
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                            <VerticalStackLayout Grid.Column="0" HorizontalOptions="StartAndExpand" Margin="0">
                                <HorizontalStackLayout Spacing="5" Margin="0,0,0,3">
                                    <Image Source="user.png" WidthRequest="20" HeightRequest="20" />
                                    <Label Text="{Binding Nome}" FontAttributes="Bold" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="5" Margin="0,0,0,3">
                                    <Image Source="telephone.png" WidthRequest="20" HeightRequest="20" />
                                    <Label Text="{Binding Telefone}" FontSize="Small" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="5" Margin="0,0,0,0">
                                    <Image Source="mail.png" WidthRequest="20" HeightRequest="20" />
                                    <Label Text="{Binding Email}" FontSize="Small" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    
                                    ImageSource="bin.png"
                                    HeightRequest="15"
                                    BackgroundColor="#E74C3C"
                                    TextColor="White"
                                    Clicked="OnDeleteContactClicked"
                                    CommandParameter="{Binding Id}"
                                    HorizontalOptions="End"
                                    Margin="0,0,0,0" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
